@model Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Excluir Produto</h1>
    </div>

    <form method="post" asp-controller="Produto" asp-action="Excluir">
        <input type="hidden" asp-for="Id" />

        <h2 class="text-white">Tem certeza que deseja excluir o registro abaixo?</h2>

        <div class="mb-3">
            <label for="ProdutoNome" class="form-label text-light">Produto:</label>
            <input type="text" class="form-control text-dark" asp-for="ProdutoNome" id="ProdutoNome" placeholder="Nome do Produto">
            @* asp-for serve pra identificar a propriedade que receberá o valor do input *@
            <span asp-validation-for="ProdutoNome" class="text-danger"></span>
        </div>
       

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Produto" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>