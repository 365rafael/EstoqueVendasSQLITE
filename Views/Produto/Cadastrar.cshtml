@model Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Produtos</h1>
    </div>

    <form method="post" asp-controller="Produto" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="ProdutoNome" class="form-label text-light">Produto:</label>
            <input type="text" class="form-control text-dark" asp-for="ProdutoNome" id="ProdutoNome" placeholder="Nome do Produto">
            @* asp-for serve pra identificar a propriedade que receberá o valor do input *@
            <span asp-validation-for="ProdutoNome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="FornecedorId" class="form-label text-light">Fornecedor:</label>
            <select class="form-select text-dark" asp-for="FornecedorId" id="FornecedorId">
                <option value="">Selecione um fornecedor</option>
                @foreach (var fornecedor in ViewBag.Fornecedores)
                {
                    <option value="@fornecedor.Id">@fornecedor.FornecedorNome</option>
                }
            </select>
            <span asp-validation-for="FornecedorId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Salvar</button>
            <a class="btn btn-primary w-50" asp-controller="Produto" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>