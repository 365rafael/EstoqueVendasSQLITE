@model LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>   
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="login">Email</label>
        <input type="email" asp-for="Login" class="form-control" id="login" aria-describedby="emailHelp" placeholder="Digite o email">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite a senha">
        @Html.ValidationMessageFor(x => x.Senha)

    </div>
    
    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>